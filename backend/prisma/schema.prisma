generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String
  repos     Repo[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Repo {
  id        String       @id @default(cuid())
  url       String
  owner     String
  branch    String?
  userId    String
  user      User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  jobs      Job[]
  chuncks   RepoChunck[]
  summary   String?
}

model Job {
  id        String   @id @default(cuid())
  status    String
  repoId    String
  repo      Repo     @relation(fields: [repoId], references: [id], onDelete: Cascade)
  error     String?
  localPath String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model RepoChunck {
  id         String                       @id @default(cuid())
  repoId     String
  repo       Repo                         @relation(fields: [repoId], references: [id], onDelete: Cascade)
  embeddings Unsupported("vector(1536)")?
  content    String
  createdAt  DateTime                     @default(now())
  updatedAt  DateTime                     @updatedAt
}
